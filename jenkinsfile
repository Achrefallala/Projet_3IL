pipeline {
  agent any

  stages {
    stage('Supprimer les dépendances existantes') {
      steps {
        script {
          sh 'rm -rf node_modules'
        }
      }
    }

    stage('Installer les dépendances') {
      steps {
        script {
          sh 'npm install --legacy-peer-deps'
        }
      }
    }

    stage('Build application') {
      steps {
        script {
          sh 'npm start'
        }
      }
    }
  }
}
